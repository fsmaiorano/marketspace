@model WebApp.Dtos.GetCatalogResponse
@{
    ViewData["Title"] = "MarketSpace";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home/home.css" asp-append-version="true"/>
}

<section class="home-container">
    <div class="hero-section">
        <h1>Welcome to MarketSpace</h1>
        <p class="lead">Discover amazing products from our marketplace</p>
    </div>

    @if (Model?.Products?.Any() == true)
    {
        <div class="products-section">
            <h2>Featured Products</h2>
            <div class="products-grid" id="products-container">
                @foreach (var product in Model.Products)
                {
                    <div class="product-card">
                        <div class="product-image">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.Name" />
                            }
                            else
                            {
                                <div class="no-image">No Image</div>
                            }
                        </div>
                        <div class="product-info">
                            <h3 class="product-name">@product.Name</h3>
                            <p class="product-description">@product.Description</p>
                            <div class="product-categories">
                                @foreach (var category in product.Categories)
                                {
                                    <span class="category-tag">@category</span>
                                }
                            </div>
                            <div class="product-price">$@product.Price.ToString("F2")</div>
                            <button class="btn btn-primary add-to-cart-btn" data-product-id="@product.Id">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                }
            </div>
            
            @if (Model.Count > Model.Products.Count)
            {
                <div class="pagination-info">
                    <p>Showing @Model.Products.Count of @Model.Count products</p>
                </div>
            }
        </div>
    }
    else
    {
        <div class="no-products">
            <h2>No Products Available</h2>
            <p>We're working on adding new products. Please check back later!</p>
        </div>
    }
</section>

@section Scripts {
    <script src="~/js/home/home.js" asp-append-version="true"></script>
}
