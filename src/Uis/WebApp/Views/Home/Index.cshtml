@model WebApp.Dtos.GetCatalogResponse
@{
    ViewData["Title"] = "MarketSpace";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home/home.css" asp-append-version="true"/>
}

<section class="home-container">
    @if (Model.Products?.Any() == true)
    {
        <div>
            <div id="products-container">
                @foreach (var product in Model.Products)
                {
                    <div class="product-item">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name"/>
                        }
                        else
                        {
                            <div>No Image</div>
                        }
                        <div>
                            <h3>@product.Name</h3>
                            <p>@product.Description</p>
                            <div>
                                @foreach (var category in product.Categories)
                                {
                                    <span>@category</span>
                                }
                            </div>
                            <div>$@product.Price.ToString("F2")</div>
                            <button data-product-id="@product.Id" class="add-to-cart-btn">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                }
            </div>

            <div id="loading-indicator" class="text-center my-4" style="display: none;">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Loading more products...</p>
            </div>

            <div id="no-more-products" class="text-center my-4" style="display: none;">
                <p class="text-muted">All products loaded.</p>
            </div>

            @if (Model.Count > Model.Products.Count)
            {
                <div id="product-count-info">
                    <p>Showing <span id="current-count">@Model.Products.Count</span> of @Model.Count products</p>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center my-5">
            <p>No products</p>
        </div>
    }
</section>

@section Scripts {
    <script>
        window.homeInitialData = {
            pageIndex: @(Model?.PageIndex ?? 1),
            pageSize: @(Model?.PageSize ?? 20),
            count: @(Model?.Count ?? 0)
        };
    </script>
    <script src="~/js/home/home.js" asp-append-version="true"></script>
}
