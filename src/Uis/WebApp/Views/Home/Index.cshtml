@model WebApp.Dtos.GetCatalogResponse
@{
    ViewData["Title"] = "MarketSpace";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home/home.css" asp-append-version="true"/>
}

<section class="home-container">
    @if (Model?.Products?.Any() == true)
    {
        <div>
            <div id="products-container">
                @foreach (var product in Model.Products)
                {
                    <div>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name"/>
                        }
                        else
                        {
                            <div>No Image</div>
                        }
                    </div>
                    <div>
                        <h3>@product.Name</h3>
                        <p>@product.Description</p>
                        <div>
                            @foreach (var category in product.Categories)
                            {
                                <span>@category</span>
                            }
                        </div>
                        <div>$@product.Price.ToString("F2")</div>
                        <button data-product-id="@product.Id">
                            Add to Cart
                        </button>
                    </div>
                }
            </div>

            @if (Model.Count > Model.Products.Count)
            {
                <div>
                    <p>Showing @Model.Products.Count of @Model.Count products</p>
                </div>
            }
        </div>
    }
    else
    {
        <div>
            <h2>No Products Available</h2>
            <p>We're working on adding new products. Please check back later!</p>
        </div>
    }
</section>

@section Scripts {
    <script src="~/js/home/home.js" asp-append-version="true"></script>
}
