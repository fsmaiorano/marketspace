@model WebApp.Dtos.GetCatalogResponse
@{
    ViewData["Title"] = "MarketSpace";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home/home.css" asp-append-version="true"/>
}

<section class="home-container">
    @if (Model.Products?.Any() == true)
    {
        <div class="products">
            <div id="products-container" class="products__container">
                @foreach (var product in Model.Products)
                {
                    <div class="product">
                        <div class="product__image-container">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.Name" class="product__image"/>
                            }
                            else
                            {
                                <div class="product__no-image">No Image</div>
                            }
                        </div>
                        <div class="product__content">
                            <h3 class="product__title">@product.Name</h3>
                            <p class="product__description">@product.Description</p>
                            <div class="product__categories">
                                @foreach (var category in product.Categories)
                                {
                                    <span class="product__category">@category</span>
                                }
                            </div>
                            <div class="product__footer">
                                <div class="product__price">$@product.Price.ToString("F2")</div>
                                <button data-product-id="@product.Id" class="product__add-button add-to-cart-btn">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div id="loading-indicator" class="loading-indicator" style="display: none;">
                <div class="spinner-border loading-indicator__spinner" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="loading-indicator__text">Loading more products...</p>
            </div>

            <div id="no-more-products" class="no-more-products" style="display: none;">
                <p class="no-more-products__text">All products loaded.</p>
            </div>

            @if (Model.Count > Model.Products.Count)
            {
                <div id="product-count-info" class="product-count-info">
                    <p class="product-count-info__text">Showing <span id="current-count" class="product-count-info__current">@Model.Products.Count</span> of @Model.Count products</p>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <p class="empty-state__text">No products available</p>
        </div>
    }
</section>

@section Scripts {
    <script>
        window.homeInitialData = {
            pageIndex: @(Model?.PageIndex ?? 1),
            pageSize: @(Model?.PageSize ?? 20),
            count: @(Model?.Count ?? 0)
        };
    </script>
    <script src="~/js/home/home.js" asp-append-version="true"></script>
}
