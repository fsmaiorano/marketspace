{
  "DatabaseSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "BasketDb",
    "CollectionName": "ShoppingCart"
  },
  "GrpcSettings": {
    "DiscountUrl": "https://localhost:6062"
  },
  "OrderService": {
    "BaseUrl": "http://localhost:6003"
  },
  "Observability": {
    "ServiceName": "Basket.Api",
    "ServiceVersion": "1.0.0",
    "EnableTracing": true,
    "EnableMetrics": true,
    "EnableLogExporter": true,
    "EnableSerilogConsole": true,
    "EnableAspNetCoreInstrumentation": true,
    "EnableHttpClientInstrumentation": true,
    "EnablePrometheusExporter": true,
    "PrometheusPort": 9466,
    "EnableJaegerExporter": true,
    "JaegerEndpoint": "http://localhost:14268/api/traces",
    "OtlpEndpoint": "http://localhost:4318",
    "EnableLoki": true,
    "LokiUrl": "http://localhost:3100"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
