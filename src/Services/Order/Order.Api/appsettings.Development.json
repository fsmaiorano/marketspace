{
  "Observability": {
    "ServiceName": "Order.Api",
    "ServiceVersion": "1.0.0",
    "OtlpEndpoint": "http://localhost:4317",
    "EnableTracing": true,
    "EnableMetrics": true,
    "EnableLogExporter": true,
    "EnableSerilogConsole": true,
    "EnableAspNetCoreInstrumentation": true,
    "EnableHttpClientInstrumentation": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [CorrelationId: {CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}

