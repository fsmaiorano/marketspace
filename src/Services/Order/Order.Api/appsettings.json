{
  "ConnectionStrings": {
    "Database": "Host=localhost;Port=5434;Database=OrderDb;Username=postgres;Password=postgres;"
  },
  "Observability": {
    "ServiceName": "Order.Api",
    "ServiceVersion": "1.0.0",
    "EnableTracing": true,
    "EnableMetrics": true,
    "EnableLogExporter": false,
    "EnableSerilogConsole": true,
    "EnableAspNetCoreInstrumentation": true,
    "EnableHttpClientInstrumentation": true,
    "EnablePrometheusExporter": true,
    "PrometheusPort": 9467,
    "EnableJaegerExporter": true,
    "JaegerEndpoint": "http://localhost:14268/api/traces",
    "EnableLoki": true,
    "LokiUrl": "http://localhost:3100"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [CorrelationId: {CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "service",
              "value": "Order.Api"
            },
            {
              "key": "environment",
              "value": "Production"
            }
          ],
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
