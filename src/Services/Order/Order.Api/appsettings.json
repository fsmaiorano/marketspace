{
  "ConnectionStrings": {
    "Database": "Host=localhost;Port=5434;Database=OrderDb;Username=postgres;Password=postgres;"
  },
  "Observability": {
    "ServiceName": "Order.Api",
    "ServiceVersion": "1.0.0",
    "EnableTracing": true,
    "EnableMetrics": true,
    "EnableLogExporter": false,
    "EnableSerilogConsole": true,
    "EnableAspNetCoreInstrumentation": true,
    "EnableHttpClientInstrumentation": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
