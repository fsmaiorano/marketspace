{
  "ConnectionStrings": {
    "Database": "Server=localhost;Port=5432;Database=CatalogDb;User Id=postgres;Password=postgres;"
  },
  "Storage": {
    "Minio": {
      "Endpoint": "localhost:9000",
      "AccessKey": "admin",
      "SecretKey": "admin123",
      "BucketName": "catalog-bucket"
    }
  },
  "Observability": {
    "ServiceName": "Catalog.Api",
    "ServiceVersion": "1.0.0",
    "EnableTracing": true,
    "EnableMetrics": true,
    "EnableLogExporter": true,
    "EnableSerilogConsole": true,
    "EnableAspNetCoreInstrumentation": true,
    "EnableHttpClientInstrumentation": true,
    "EnablePrometheusExporter": true,
    "PrometheusPort": 9464,
    "EnableJaegerExporter": true,
    "JaegerEndpoint": "http://localhost:14268/api/traces",
    "OtlpEndpoint": "http://localhost:4318",
    "EnableLoki": true,
    "LokiUrl": "http://localhost:3100"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
