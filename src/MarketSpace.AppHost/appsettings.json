{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Aspire.Hosting.Dcp": "Warning"
    }
  },
  "Aspire": {
    "Databases": {
      "Postgres": {
        "DefaultPassword": "postgres",
        "Catalog": {
          "Name": "postgres-catalog",
          "DatabaseName": "CatalogDb",
          "ConnectionName": "catalogdb",
          "Port": 5432
        },
        "Order": {
          "Name": "postgres-order",
          "DatabaseName": "OrderDb",
          "ConnectionName": "orderdb",
          "Port": 5435
        },
        "Merchant": {
          "Name": "postgres-merchant",
          "DatabaseName": "MerchantDb",
          "ConnectionName": "merchantdb",
          "Port": 5436
        },
        "User": {
          "Name": "postgres-user",
          "DatabaseName": "UserDb",
          "ConnectionName": "userdb",
          "Port": 5437
        }
      },
      "MongoDB": {
        "Name": "mongodb",
        "Port": 5433,
        "Basket": {
          "DatabaseName": "basketdb",
          "CollectionName": "ShoppingCarts"
        }
      }
    },
    "Storage": {
      "Minio": {
        "ContainerName": "minio",
        "Image": "minio/minio",
        "Tag": "latest",
        "ApiPort": 9000,
        "ConsolePort": 9001,
        "RootUser": "admin",
        "RootPassword": "admin123",
        "Endpoint": "localhost:9000",
        "BucketName": "catalog-bucket"
      }
    },
    "Services": {
      "Catalog": {
        "ProjectName": "catalog-api",
        "HttpPort": 6000,
        "HttpsPort": 6060
      },
      "Basket": {
        "ProjectName": "basket-api",
        "HttpPort": 6001,
        "HttpsPort": 6061
      },
      "Order": {
        "ProjectName": "order-api",
        "HttpPort": 6003,
        "HttpsPort": 6063
      },
      "Merchant": {
        "ProjectName": "merchant-api",
        "HttpPort": 6005,
        "HttpsPort": 6065
      },
      "User": {
        "ProjectName": "user-api",
        "HttpPort": 7005,
        "HttpsPort": 7065
      },
      "BFF": {
        "ProjectName": "backendforfrontend-api",
        "HttpPort": 5100,
        "HttpsPort": 5150
      }
    }
  }
}
