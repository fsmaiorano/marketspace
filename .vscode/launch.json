  "configurations": [
    {
      "name": "Merchant.Api",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-merchant-api",
      "program": "${workspaceFolder}/src/Services/Merchant/Merchant.Api/bin/Debug/net9.0/Merchant.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Services/Merchant/Merchant.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5055;http://localhost:5005"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
